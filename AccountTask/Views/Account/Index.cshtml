@model IEnumerable<AccountTask.Models.Account>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Accounts</h1>

<p>
    <a asp-action="AddAccount" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApartmentNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Locality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApartmentNumber)
                </td>
                <td>
                    <span class="btn-group">
                        <a asp-action="UpdateAccount" asp-route-accountId="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="ShowDetailsOfAccount" asp-route-accountId="@item.Id" class="btn btn-primary">Details</a>
                    
                    </span>   
                    <form asp-action="DeleteAccount" asp-route-accountId="@item.Id">
                        <button type="submit" onclick="return confirm('Вы действительно хотите удалить запись?')" class="btn btn-danger">Delete</button>
                    </form>
                        @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                </td>
            </tr>
        }
    </tbody>
</table>
